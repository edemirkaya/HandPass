@using HandPass.WebUI.Models;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<UserPasswordViewModel>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Kullanıcı Şifreleri</h3>
                    </div>
                    <div class="card-body">
                        <table id="myTable" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Definition</th>
                                    <th>Url</th>
                                    <th>Category</th>
                                    <th>User Name</th>
                                    <th>Password</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.PassDefinition</td>
                                        <td>@item.Url</td>
                                        <td>@item.PassCategory</td>
                                        <td>@item.UserName</td>
                                        <td>@item.Password</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Definition</th>
                                    <th>Url</th>
                                    <th>Category</th>
                                    <th>User Name</th>
                                    <th>Password</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="card-footer">
    <button type="submit" id="btnSubmit" class="btn btn-info">Create New Password</button>
</div>
<script type="text/javascript">
    $("#btnSubmit").click(function () {
        window.location.href = '@Url.Action("CreateUserPassword","UserPass")';
    });

    $("#searchPass").on("keyup", function () {
        var value = $(this).val().toLowerCase();
        $("#myTable tr").filter(function () {
            $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
        });
    });
</script>